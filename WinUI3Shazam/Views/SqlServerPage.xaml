<Page
    x:Class="WinUI3Shazam.Views.SqlServerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
    mc:Ignorable="d">
    
    <Grid Background="#EDEDED">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="30,15,0,5" >
            <TextBlock Text="For SQL Server feature, check out my WPF Shazam version (WpfShazam folder): " FontSize="20"  />

            <TextBlock FontSize="18" Margin="5,2,0,0">                
                <!--Need both NavigateUri and Run's Text-->
                <Hyperlink NavigateUri="https://github.com/psun247/ShazamDesk">
                    <Run Text="https://github.com/psun247/ShazamDesk" />
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
